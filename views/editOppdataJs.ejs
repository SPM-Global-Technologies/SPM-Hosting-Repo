<script>
    function editFunctionOpp(name,val,oppid,accid) {
      var data = JSON.stringify({name:name, value: val, oppid:oppid, accid:accid});
    //   console.log(data)
      fetch("<%= base_url %>api/updateOpportunity", {
          method: 'post',
          body: data,
          headers: {
              'Content-Type': 'application/json'
          }
      }).then((response) => {
            console.log(response)
      }).then((res) => {
          if (res.status === 201) {
              console.log("Post successfully created!")
          }
      }).catch((error) => {
          console.log(error)
      })

    }
</script>