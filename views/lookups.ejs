    <script>
        document.getElementById('addlookups').addEventListener("click",function(){
            var class_name = document.getElementById('class_name').value;

            if(class_name != "")
            {
              fetch("<%= base_url %>api/lookups/add", {
                method: 'post',
                body: JSON.stringify({class_name:class_name}),
                headers : {
                   "Content-Type": "application/json"
                }
              }).then(res => res.json())
              .then(data => {
                if(data.status == "error"){
                    alert("Failed to add, Try again!")
                }

                if(data.status == "success"){
                    alert("Successfully Added")
                    document.getElementById('class_name_id').value = data.access_key;
                }
                // console.log(res.body)
                // if (res.status === 201) {
                //     console.log("Post successfully created!")
                // }
                // return resolve(true);
              }).catch((error) => {
                console.log(error)
