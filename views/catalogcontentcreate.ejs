<div>
    <div class="helpbox">
        <button><a href="#divOne" class="button1"><img src="<%= base_url %>images/HelpIcon.png" alt="Icon"
            style="height:35px;width:35px;"></a></button>
    </div>
    <div class="overlay" id="divOne">
        <div class="wrapper">
            <p class="head">LOG A SUPPORT REQUEST</p><br>
            <a href="#" class="close">&times;</a>
            <div class="content">
                <div class="container1">
                    <form>

                        <label>Summary:</label>
                        <input type="text" class="help">
                        <label>Description:</label>
                        <textarea rows="8" cols=""></textarea>
                        <label>Priority(0ptional):</label><br>
                        <select name="format" id="format">
                            <option selected disabled>Select..</option>
                            <option value="critical">Critical</option>
                            <option value="high">High</option>
                            <option value="medium">Medium</option>
                            <option value="low">Low</option>
                            <option value="lowest">Lowest</option>
                        </select><br><br>
                        <label>Attachment(optional):</label><br>
